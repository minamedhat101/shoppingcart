extends ../layouts/layout
block content
	h2 Add New Product
	form(action='/admin/edit-product/'+product._id, method='post')
		.form-group
			label Title
			input.span3.form-control(type='text', name='title' value=product.title)
		.form-group
			label Description
			input.span3.form-control(type='text', name='description' value=product.description)
		.form-group
			label Price
			input.span3.form-control(type='text', name='price' value=product.price)
		input(type="hidden", name="_csrf" value=csrfToken)
		//input(type="hidden", name="imagePath" value="")
		input.btn.btn-primary.pull-right(type='submit')
		.clearfix